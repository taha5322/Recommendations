<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="business"
            type="com.siddiqui.recommendations.UI.Industry"
            />
    </data>

    <RelativeLayout
        android:id="@+id/hourlyListView"
        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:background="@color/cardview_dark_background"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/timeLabel"

            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="8dp"
            android:text="@{String.valueOf(business.name)}"

            android:textColor="#ffffff"
            android:textSize="24sp"
            tools:text="12pm" />

        <ImageView
            android:id="@+id/iconImageView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/timeLabel"

            android:layout_toRightOf="@+id/timeLabel"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:imageResource="@drawable"

            app:srcCompat="@drawable/ic_launcher_background" />


        <TextView
            android:id="@+id/temperatureLabel"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"

            android:text="@{String.valueOf(business.name)}"
            android:textColor="#ffffff"
            android:textSize="24sp"
            tools:text="100" />
        />
        <TextView
            android:id="@+id/summaryLabel"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iconImageView"

            android:layout_toRightOf="@+id/iconImageView"

            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@{business.name}"

            android:textColor="#ffffff"
            android:textSize="24sp"
            tools:text="partly cloudy" />


    </RelativeLayout>
</layout>